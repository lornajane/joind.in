<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         strict="true"
         colors="true"
         bootstrap = "bootstrap/bootstrap.php"
         verbose="true">
  <testsuite name="Joind.in API v2 Test Suite">
    <directory>./</directory>
  </testsuite>
  <logging>
    <log type="coverage-html" target="../../../build/api-v2/coverage/" title="joindin"
         charset="UTF-8" yui="true" highlight="true"
         lowUpperBound="35" highLowerBound="70"/>
    <log type="coverage-clover" target="../../../build/api-v2/logs/clover.xml"/>
    <log type="junit" target="../../../build/api-v2/logs/junit.xml" logIncompleteSkipped="false"/>
  </logging>

  <filter>
    <whitelist addUncoveredFilesFromWhitelist="false">
      <directory suffix=".php">../../api-v2/</directory>
    </whitelist>
  </filter>
</phpunit>
